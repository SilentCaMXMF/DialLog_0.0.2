<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📱 DialLog - Auto Call Tracker"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:textColor="@color/primaryColor" />

        <!-- Status Display -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📱 No favorites selected - Add contacts to start auto-tracking"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/status_background"
            android:layout_marginBottom="24dp" />

        <!-- Main Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/manage_favorites_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="⭐ Manage Favorites"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/primary_button_background" />

            <Button
                android:id="@+id/view_analytics_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="📊 Analytics"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:background="@drawable/secondary_button_background" />

        </LinearLayout>

        <!-- Secondary Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/view_history_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="📞 Call History"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/tertiary_button_background" />

            <Button
                android:id="@+id/test_call_logging_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="🧪 Test Log"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:background="@drawable/tertiary_button_background" />

        </LinearLayout>

        <!-- Favorites removed from home screen as requested -->

        <!-- Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/info_background"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ℹ️ How it works:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primaryColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Add contacts to favorites for automatic tracking\n• When favorite contacts call, DialLog automatically records talk/listen times\n• View detailed analytics and call history anytime\n• All data stays private on your device"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/secondaryTextColor" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
