<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🗣️ Communication Style Analysis"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="@color/primaryColor" />

        <!-- Explanation -->
        <TextView
            android:id="@+id/explanation_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Understand your communication patterns and discover insights about your conversational style."
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:padding="16dp"
            android:background="@drawable/info_background"
            android:textColor="@color/secondaryTextColor" />

        <!-- Communication Styles Grid Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Communication Style Categories"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textColor="@color/primaryColor" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap any style to learn more about its characteristics and get personalized advice."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/secondaryTextColor" />

        <!-- Communication Styles Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/style_grid_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="24dp" />

        <!-- Additional Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/info_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💡 Understanding the Scale"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primaryColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 🟢 Balanced (50-59%): Ideal communication equilibrium\n• 🟡 Assertive (60-69%): Confident leadership style\n• 🟠 Impositive (70-79%): Dominant communication\n• 🔵 Listening-Focused (40-49%): Thoughtful and supportive\n• 🟣 Passive (30-39%): Reserved and cautious\n• ⚫ Silent Observer (0-19%): Extremely quiet pattern"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.3"
                android:textColor="@color/secondaryTextColor" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
