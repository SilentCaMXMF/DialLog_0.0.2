<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/favorite_contact_background"
    android:layout_marginBottom="4dp">

    <!-- Contact Icon -->
    <TextView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="ðŸ‘¤"
        android:textSize="24sp"
        android:gravity="center"
        android:background="@drawable/contact_avatar_background"
        android:layout_marginEnd="12dp" />

    <!-- Contact Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tracking_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¯ Auto-tracked"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/accentColor"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Remove Button -->
    <ImageButton
        android:id="@+id/remove_favorite_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="@drawable/remove_button_background"
        android:contentDescription="Remove from favorites"
        android:layout_marginStart="8dp" />

</LinearLayout>
