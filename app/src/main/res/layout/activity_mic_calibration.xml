<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header Section -->
        <TextView
            android:id="@+id/calibration_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¤ Microphone Calibration"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/calibration_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginBottom="24dp"
            android:progress="0"
            android:max="100"
            android:progressTint="@color/accentColor" />

        <!-- Instructions Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/info_background"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/instruction_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instructions will appear here"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ready to start"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/accentColor"
                android:gravity="center" />

        </LinearLayout>

        <!-- Volume Indicator Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/status_background"
            android:padding="16dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”Š Audio Level"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <ProgressBar
                android:id="@+id/volume_indicator"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:progress="0"
                android:max="100"
                android:progressTint="@color/primaryColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Silent"
                    android:textSize="10sp"
                    android:textColor="@color/secondaryTextColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Speaking"
                    android:textSize="10sp"
                    android:textColor="@color/secondaryTextColor"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Spacer to push buttons to bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/start_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Start Calibration"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/primary_button_background"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/complete_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Continue to DialLog"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/primary_button_background"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/skip_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Skip Calibration (Use Defaults)"
                android:textSize="14sp"
                android:background="@drawable/tertiary_button_background"
                android:textColor="@color/secondaryTextColor" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
